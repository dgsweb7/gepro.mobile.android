<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@color/write">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<ImageView android:id="@+id/imglog" android:layout_width="fill_parent"
			android:layout_height="wrap_content"></ImageView>


		<TextView android:text="@string/username" android:id="@+id/lblLogin"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			style="@style/txt_common"></TextView>

		<EditText android:id="@+id/txtLogin" android:layout_below="@+id/lblLogin"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:inputType="text" android:hint="exemplo@dominio.com.br"></EditText>


		<TextView android:text="@string/password" android:id="@+id/lblSenha"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			style="@style/txt_common"></TextView>
		<EditText android:id="@+id/txtSenha" android:layout_below="@+id/lblSenha"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:inputType="textPassword" android:hint="*******"></EditText>

		<Button android:id="@+id/btnLogin" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_marginTop="10px"
			android:text="Login" style="@style/btn_common" android:layout_weight="1"></Button>
		
		<Button android:id="@+id/btnExperimentar" android:layout_width="fill_parent" android:background="@color/write" android:textColor="@color/gray"
			android:layout_height="wrap_content" android:text="Clique para conhecer!" android:layout_marginTop="10px"
			style="@style/btn_common" android:layout_weight="1"></Button>


	</LinearLayout>

</ScrollView>

