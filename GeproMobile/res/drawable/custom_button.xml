<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#6c6c6c"
                android:endColor="#6a6a6a"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#6a6a6a" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#6a6a6a"
                android:startColor="#000000"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#6a6a6a" />
            <corners
                android:radius="6dp" />
    
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#000000"
                android:startColor="#6a6a6a"
                android:angle="270" ></gradient>
            <stroke
                android:width="3dp"
                android:color="#6a6a6a" />
            <corners
                android:radius="3dp" ></corners>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
